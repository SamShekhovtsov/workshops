.col-md-6.col-md-offset-3.panel.panel-default
  .panel-body
    %p#notice= notice
    %p
      %b Name:
      = category.name
      \|
      = link_to 'Change', edit_category_path(category)

    %p
      Related products: 
      - category.products.each do |product|
        = link_to product.title, category_product_path(product.category, product) 
        \|  
    %p 
      = link_to 'Products list', category_products_path(category)
    %p
      %h3 New product
      = render 'products/form'

    = link_to 'Edit', edit_category_path(category)
    \|
    = link_to 'Back', categories_path, class: 'btn btn-primary'
